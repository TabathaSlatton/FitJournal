<%# new post section %>
<%= render "posts/form" %>
<br><br><br>
<%# posts index %>
<div class="card border-light mb-3 " style="width: 100%;">
  <div class="card-header bg-primary text-white text-center "><h5>Newsfeed: </h5></div>
  <div class="card-body">
    <% @posts.each do |post| %>
      <% if post.theme == "food"%>
        <div class="card border-success mb-3 w-60">
      <% elsif post.theme == "fitness" %>
        <div class="card border-warning mb-3 w-60">
      <% else %>
          <div class="card border-info mb-3 w-60">
      <% end %>
          <div class="card-header">
            <div class="d-flex w-100 justify-content-between"><%= link_to @user.username, user_path(@user) %><small><%= post.updated_at.strftime('%b %d, %Y') || post.created_at.strftime('%b %d, %Y') %></small></div>
            </div>
            <div class="card-body">
              <%= post.content %>
      <% if post.user_id == @user.id %>
          <div class="modal-footer">
          <small><%= link_to 'Edit', edit_post_path(post), class:"card-link" %></small>
          <small><%= link_to("Delete", post, method: :delete, data:{confirm: "Are you sure?"}) %></small>
          </div>
    <% end %>
    </div>
    </div>

<% end %>
  </div>




  



            
